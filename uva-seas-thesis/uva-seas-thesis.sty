\edef\hour{\ifnum\hour<10 0\fi\number\hour}

% calculate minute
\newcount\minute
\minute\time\relax
\count255=\hour
\multiply\count255 by 60
\advance\minute by -\count255
\edef\minute{\ifnum\minute<10 0\fi\number\minute}


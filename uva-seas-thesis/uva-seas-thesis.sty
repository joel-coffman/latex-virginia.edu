%\ifnum\hour > 12
%  \advance\hour by -12
%  \def\meridiem{pm}\relax
%\fi

% \formattedtime => HH:MM
\edef\formattedtime{\hour:\minute}

% \timestamp => ``YYYY-MM-DD HH:MM'' date/time style
\edef\timestamp{%
  \the\year-\ifnum\month<10 0\fi\the\month-\ifnum\day<10 0\fi\the\day\ \hour:\minute
}


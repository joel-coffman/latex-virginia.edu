      \if@uvaseasthesis@twoside %
        \thepage\hfill %
      \fi %
      %
      \if@uvaseasthesis@compliantmargins %
      \else
        \leftmark %
      \fi %
      %
      \if@uvaseasthesis@twoside %
      \else %
        \hfill\thepage %
      \fi%
  }%
  % FOOTER of ODD numbered pages
  \def\@oddfoot{%
      \if@uvaseasthesis@draft %
        \hfill \draftnotice \hfill %
      \fi%
  }%
  % FOOTER of EVEN numbered pages
  \def\@evenfoot{%
      \if@uvaseasthesis@draft %
        \hfill \draftnotice \hfill %
      \fi%
  }%
}

